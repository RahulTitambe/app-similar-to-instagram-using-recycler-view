<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/constraintPrimaryPost"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtPrimaryPostTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imgPrimaryPostImage"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitStart"
        app:layout_constraintTop_toBottomOf="@id/txtPrimaryPostTitle"/>

    <TextView
        android:id="@+id/txtPrimaryPostDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/imgPrimaryPostImage"/>


</androidx.constraintlayout.widget.ConstraintLayout>